<%- include('../partials/header') %>

<section id="show-page">
    <div><%= restaurant.name %></div>
    <div><%= restaurant.address %></div>
    <div>Neighborhood: </div>
    <div><%= restaurant.neighborhood %></div>
    <div>Proteins: </div>
    <div><%= restaurant.proteins %></div>
    <div>Super: </div>
    <div><%= restaurant.super ? 'Always!' : 'Nuh-uh' %></div>
    <img class="restaurant-image" src="<%= restaurant.image %>"> </img>
    </section>


<h1>Add a Review</h1>
<form id="add-review-form" method="POST" action="/restaurants/<%= restaurant._id %>/reviews">
    <label>Review:</label>
    <textarea name="content"></textarea>
    <br>
    <label>Rating:</label>
    <select class="review-rating" name="rating">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5" selected>5</option>
      </select>
      <input type="submit" value="Add Review">
</form>

<% if (restaurant.reviews.length) { %>
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
          <th>Review</th>
          <th>Rating</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0 %>
        <% restaurant.reviews.forEach(function(r) { %>
          <% total += r.rating %>
          <tr>
            <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer" ><%= r.userName %></td>
            <td><%= r.createdAt.toLocaleDateString() %></td>
            <td><%= r.content %></td>
            <td><%= r.rating %></td>
            <td>
              <% if (user?._id.equals(r.user)) { %>
                <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                  <button type="submit">X</button>
                </form>
                <button onClick="location.href='/restaurants/<%= restaurant._id %>/reviews/<%= r._id %>/edit'">EDIT REVIEW</form>
              <% } %>
            </td>
          </tr>
        <% }); %>
        <tr>
          <td colspan="3"></td>
          <td><strong><%= (total / restaurant.reviews.length).toFixed(1) %></strong></td>
        </tr>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Reviews Yet</h5>
  <% } %>


<%- include('../partials/footer') %>
